@model WebApp.Models.ItemViewModel
@{
    ViewBag.Title = "Create";
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CreateForm</title>

</head>
<body>
    <div>


        <div class="container" style="width:40%;margin-top:2%">

            @using (Html.BeginForm("Create", "Item", FormMethod.Post))
            {

                @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @placeholder = "Name" })
                @Html.TextBoxFor(model => model.Description, new { @class = "form-control", @placeholder = "Description" })
                @Html.TextBoxFor(model => model.Price, new { @class = "form-control", @placeholder = "Price" })
                <input type="submit" value="Submit" class="btn btn-block btn-primary" />

            }

        </div>

    </div>
</body>
</html>
